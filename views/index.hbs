<script type="text/template" id="instagramTpl">
  <div class="instagram">
    <div class="image"><img src="<%= images.standard_resolution.url %>"></div>
    <div>By <span class="author"><%= user.username %></span>
    </div>
  </div>
</script>
<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.6.0/underscore-min.js"></script>
<script>
(function updateResults() {
  var tweetTpl = _.template($('#tweetTpl').html())
  var instagramTpl = _.template($('#instagramTpl').html())

  var $results = $('.results')
  $results.html('Loading…')

  $.get('/search').done(function(data) {
    if (!data.length) {
      return $results.html('No Results')
    }

    var $render = $('<div/>')
    _.each(data.twitter, function(item) {
      $render.append(tweetTpl(item))
    })
    _.each(data.instagram, function(item) {
      $render.append(instagramTpl(item))
    })
    $results.html($render.html())
  }).fail(function(err, xhr, message) {
    $results.html(message)
    console.error(arguments)
  })
}())
</script>